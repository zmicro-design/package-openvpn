#!/bin/bash

export PACKAGE_CORE_NAME="openvpn"
export PACKAGE_CORE_ORG="zmicro"
export PACKAGE_CORE_BIN_NAME="$PACKAGE_CORE_NAME"
export PACKAGE_CORE_VERSION="v0.0.0"

export PACKAGE_CORE_ORG_DOREAMON_DESIGN="doreamon-design"
export PACKAGE_CORE_VERSION_DOREAMON_DESIGN=v2.1-1.2.0

if [ "$PLUGIN_PACKAGE_USE_DOREAMON_DESIGN" = "true" ]; then
  export PACKAGE_CORE_ORG=$PACKAGE_CORE_ORG_DOREAMON_DESIGN
  export PACKAGE_CORE_VERSION=$PACKAGE_CORE_VERSION_DOREAMON_DESIGN
fi

export PACKAGE_CORE_GIT_REPOSITORY="https://github.com/${PACKAGE_CORE_ORG}/${PACKAGE_CORE_NAME}"

export PACKAGE_CORE_RELEASE_DOWNLOAD="${PACKAGE_CORE_GIT_REPOSITORY}/releases/download"

export PACKAGE_CORE_OPENVPN_PUBLIC_HOSTNAME=${PACKAGE_CORE_OPENVPN_PUBLIC_HOSTNAME}
export PACKAGE_CORE_OPENVPN_PROTOCOL=${PACKAGE_CORE_OPENVPN_PROTOCOL:-"tcp"}
export PACKAGE_CORE_OPENVPN_PORT=${PACKAGE_CORE_OPENVPN_PORT}
export PACKAGE_CORE_OPENVPN_DNS=${PACKAGE_CORE_OPENVPN_DNS:-"1"}
export PACKAGE_CORE_OPENVPN_CLIENT=${PACKAGE_CORE_OPENVPN_CLIENT}
