#!/bin/bash

export PACKAGE_NAME="openvpn"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/config"
import "$ZMICRO_PACKAGES_PATH/$PACKAGE_NAME/core"

help() {
  echo "Usage:"
  echo "  zmicro openvpn <args ...>"
  echo ""

  openvpn --help
}

version() {
  openvpn --version
}

core() {
  # context directory
  local context="$ZMICRO_PACKAGES_DATA_PATH/openvpn"
  if [ ! -d "$context" ]; then
    mkdir -p $context
  fi
  cd $context
  # context directory

  case $1 in
  -h | --help | help | '')
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    openvpn "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
